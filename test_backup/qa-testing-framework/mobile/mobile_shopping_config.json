    "mobile_features": {
      "camera": {
        "barcode_scanning": true,
        "product_image_capture": true,
        "qr_code_scanning": true
      },
      "location_services": {
        "store_locator": true,
        "shipping_estimates": true,
        "local_inventory": true
      },
      "notifications": {
        "push_notifications": true,
        "in_app_notifications": true,
        "email_notifications": true
      },
      "offline_capabilities": {
        "cart_persistence": true,
        "product_caching": true,
        "wishlist_sync": true
      }
    },
    "touch_interactions": {
      "gestures": {
        "swipe": {
          "directions": ["left", "right", "up", "down"],
          "distances": [100, 200, 300],
          "speeds": ["slow", "medium", "fast"]
        },
        "pinch_zoom": {
          "scales": [0.5, 1.5, 2.0, 3.0],
          "center_points": ["center", "top_left", "bottom_right"]
        },
        "long_press": {
          "durations": [500, 1000, 1500, 2000]
        },
        "double_tap": {
          "intervals": [100, 200, 300]
        }
      },
      "scroll_behaviors": {
        "infinite_scroll": true,
        "pull_to_refresh": true,
        "momentum_scrolling": true
      }
    },
    "performance_thresholds": {
      "page_load_time": 3.0,
      "image_load_time": 2.0,
      "search_response_time": 1.5,
      "cart_update_time": 1.0,
      "checkout_completion_time": 10.0
